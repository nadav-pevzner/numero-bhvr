{
	"name": "numero",
	"packageManager": "bun@1.3.0",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"server": "bun run --hot apps/server/index.ts",
		"client": "cd apps/client && bun run dev",
		"dev": "turbo dev",
		"open-auth-docs": "open-cli http://localhost:3000/api/auth/reference",
		"clean": "git clean -xdf .turbo node_modules",
		"check": "bun format-and-lint && bun check:case && bun check:knip",
		"check:case": "bunx --bun case-police",
		"check:knip": "bunx --bun knip",
		"check:updates": "bunx npm-check-updates -ui -ws",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"typecheck": "bun run --filter '*' typecheck",
		"commit": "git cz"
	},
	"dependencies": {
		"@biomejs/biome": "^2.3.5",
		"@t3-oss/env-core": "^0.13.8",
		"hono": "^4.9.0",
		"pg": "^8.16.3",
		"turbo": "^2.6.1",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.1",
		"@commitlint/config-conventional": "^20.0.0",
		"@types/bun": "latest",
		"@types/pg": "^8.15.5",
		"commitizen": "^4.3.1",
		"cz-git": "^1.12.0",
		"lefthook": "^2.0.4",
		"open-cli": "^8.0.0",
		"typescript": "^5.9.3"
	}
}
